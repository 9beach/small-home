[ -z "$PS1" ] && exit

case "$(uname -sr)" in
	Darwin*)
		PLATFORM='darwin'
		;;
	Linux*icrosoft*)
		PLATFORM='wsl'
		;;
	Linux*)
		PLATFORM='linux'
		;;
	*BSD*)
		PLATFORM='bsd'
		;;
	CYGWIN*|MINGW*|MINGW32*|MSYS*)
		PLATFORM='windows'
		;;
esac

if [ -n "$ZSH_VERSION" ]; then
	setopt extended_glob

	fpath+=$HOME/.zsh/pure

	source ~/.zsh/zsh-z/zsh-z.plugin.zsh
	source ~/.zsh/zsh-autosuggestions/zsh-autosuggestions.zsh

	bindkey '^ ' autosuggest-accept
	bindkey '^k' autosuggest-execute
	bindkey '^j' autosuggest-execute

	autoload -U promptinit && promptinit
	autoload -U compinit && compinit

	zstyle :prompt:pure:path color white
	zstyle ':prompt:pure:prompt:*' color cyan
	zstyle ':completion:*' menu select

	prompt pure

	setopt hist_ignore_all_dups
	setopt hist_ignore_space

	export HISTFILE="$HOME/.zsh_history"
	ZLE_REMOVE_SUFFIX_CHARS=""

	alias history='history 0'
else
	shopt -s extglob

	export PS1="\W ❯ "

	HISTCONTROL=ignoredups:ignorespace
	
	shopt -s histappend
	shopt -s checkwinsize
fi

umask 022

HISTSIZE=5000
SAVEHIST=$HISTSIZE

export PATH=$PATH:~/bin:~/.local/bin
export LANG=en_US.UTF-8
export LC_ALL=en_US.UTF-8
export VISUAL=vim
export EDITOR=vim
export CLICOLOR=1
export LSCOLORS=GxFxCxDxBxegedabagaced
export TERM=xterm-256color

if [ "$PLATFORM" = "darwin" ]; then
	export GREP_OPTIONS='--color=auto'
fi

if [ -x /usr/bin/dircolors ]; then
	alias ls='ls --color=auto'
	alias grep='grep --color=auto'
	alias fgrep='fgrep --color=auto'
	alias egrep='egrep --color=auto'
else
	alias ls='ls -GFh'
fi

alias rm='rm -i'
alias mv='mv -i'
alias cp='cp -i'
alias less='less -R'
alias ll='ls -l'
alias lls='ls -l'
alias la='ls -Al'
alias l='ls -CF'
alias lh='ls -lh'
alias lt='ls -lt'
alias lth='ls -lt | head -n 15'

if type nvim &> /dev/null; then
	alias vi='nvim'
fi

if [ "$PLATFORM" = "wsl" ] || [ "$PLATFORM" = "windows" ]; then
	alias open='cmd.exe /C start'
	alias pbpaste='powershell.exe "[Console]::OutputEncoding = [Text.Encoding]::UTF8; Get-Clipboard"'
	alias pbcopy=clip.exe
elif [ "$PLATFORM" = "linux" ]; then
	alias open='xdg-open'
	alias pbpaste='xclip -selection clipboard -o'
	alias pbcopy='xclip -silent -selection clipboard -in'
fi

if [ "$PLATFORM" = "darwin" ]; then
	alias dl='yt-dlp --embed-chapters --no-mtime --no-abort-on-error -o "%(title)#U.%(ext)s"'
else
	alias dl='yt-dlp --embed-chapters --no-mtime --no-abort-on-error -o "%(title)s.%(ext)s"'
fi

alias batp='bat -p --paging=never --theme=gruvbox-dark'
alias sortn="sort -t$'\t' -h -k"
alias gitp='git pull'
alias gitpl='git pull'
alias gitps='git push'
alias gitst='git status'
alias gitdi='git diff'
alias gitco='git commit -am'

sort -R ~/.writing-quotes | head -1
